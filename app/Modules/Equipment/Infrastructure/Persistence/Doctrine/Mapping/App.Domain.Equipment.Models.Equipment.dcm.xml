<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Modules\Equipment\Domain\Models\Equipment" table="equipment">
        <id name="uid" type="guid" column="equipment_uid">
            <generator strategy="NONE"/>
        </id>

        <embedded name="name" class="App\Modules\Equipment\Domain\ValueObjects\Name" column-prefix="false"/>

        <field name="status"
               type="string"
               length="20"
               column="status"
               enum-type="App\Modules\Equipment\Domain\Enums\StatusEnum"
        />

        <field name="transportUid" type="guid" column="transport_uid" nullable="true"/>
        <field name="warehouse" type="string" length="100" column="warehouse" nullable="true"/>
        <field name="issuedToUid" type="guid" column="issued_to_uid" nullable="true"/>

        <field name="purchaseInvoiceUid" type="guid" column="purchase_invoice_uid" nullable="true"/>
        <field name="supplierUid" type="guid" column="supplier_uid" nullable="true"/>
        <field name="issueDocUid" type="guid" column="issue_doc_uid" nullable="true"/>

        <field name="mountingDate" type="date_immutable" column="mounting_date" nullable="true"/>
        <field name="shipmentInvoiceUid" type="guid" column="shipment_invoice_uid" nullable="true"/>
        <field name="customerUid" type="guid" column="customer_uid" nullable="true"/>

        <field name="skziFrom" type="date_immutable" column="skzi_from" nullable="true"/>
        <field name="skziTo" type="date_immutable" column="skzi_to" nullable="true"/>

        <field name="createdAt" type="datetime_immutable" column="created_at"/>
        <field name="creatorUid" type="guid" column="creator_uid" nullable="true"/>
        <field name="updatedAt" type="datetime_immutable" column="updated_at" nullable="true"/>
        <field name="updatedByUid" type="guid" column="updated_by_uid" nullable="true"/>
    </entity>
</doctrine-mapping>
